<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.web.mapper.ImGroupMapper">

    <resultMap type="com.ruoyi.web.domain.ImGroup" id="ImGroupResult">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="avatar" column="avatar"/>
        <result property="description" column="description"/>
        <result property="ownerId" column="owner_id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <resultMap type="com.ruoyi.web.domain.ImGroupMember" id="ImGroupMemberResult">
        <id property="id" column="id"/>
        <result property="groupId" column="group_id"/>
        <result property="userId" column="user_id"/>
        <result property="role" column="role"/>
        <result property="inviterId" column="inviter_id"/>
        <result property="joinTime" column="join_time"/>
    </resultMap>

    <sql id="selectImGroupVo">
        select id, name, avatar, description, owner_id, create_time, update_time
        from im_group
    </sql>

    <select id="selectImGroupList" parameterType="com.ruoyi.web.domain.ImGroup" resultMap="ImGroupResult">
        <include refid="selectImGroupVo"/>
        <where>
            and is_deleted = 0
            <if test="name != null and name != ''"> and name like concat('%', #{name}, '%') </if>
        </where>
    </select>

    <select id="selectImGroupById" parameterType="Long" resultMap="ImGroupResult">
        <include refid="selectImGroupVo"/>
        where id = #{id} and is_deleted = 0
    </select>

    <insert id="insertImGroup" parameterType="com.ruoyi.web.domain.ImGroup" useGeneratedKeys="true" keyProperty="id">
        insert into im_group (name, avatar, description, owner_id, max_members, create_time, update_time)
        values (#{name}, #{avatar}, #{description}, #{ownerId}, 500, NOW(), NOW())
    </insert>

    <update id="updateImGroup" parameterType="com.ruoyi.web.domain.ImGroup">
        update im_group
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="avatar != null">avatar = #{avatar},</if>
            <if test="description != null">description = #{description},</if>
            <if test="updateTime != null">update_time = NOW(),</if>
        </trim>
        where id = #{id}
    </update>

    <update id="deleteImGroupById" parameterType="Long">
        update im_group set is_deleted = 1, deleted_time = NOW() where id = #{id}
    </update>

    <update id="deleteImGroupByIds" parameterType="Long[]">
        update im_group set is_deleted = 1, deleted_time = NOW() where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

    <select id="selectGroupMembersByGroupId" parameterType="Long" resultMap="ImGroupMemberResult">
        select * from im_group_member where group_id = #{groupId}
    </select>

    <insert id="addGroupMember">
        insert into im_group_member (group_id, user_id, role, inviter_id, join_time)
        values (#{groupId}, #{userId}, #{role}, #{inviterId}, NOW())
    </insert>

    <update id="dismissGroup" parameterType="Long">
        update im_group set is_deleted = 1, deleted_time = NOW() where id = #{groupId}
    </update>
</mapper>
