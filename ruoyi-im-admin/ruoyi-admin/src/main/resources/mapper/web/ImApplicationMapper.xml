<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.web.mapper.ImApplicationMapper">

    <resultMap type="com.ruoyi.web.domain.ImApplication" id="ImApplicationResult">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="code" column="code"/>
        <result property="icon" column="icon"/>
        <result property="category" column="category"/>
        <result property="description" column="description"/>
        <result property="appType" column="app_type"/>
        <result property="appUrl" column="app_url"/>
        <result property="isSystem" column="is_system"/>
        <result property="isVisible" column="is_visible"/>
        <result property="sortOrder" column="sort_order"/>
        <result property="permissions" column="permissions"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="selectImApplicationVo">
        select id, name, code, icon, category, description, app_type, app_url,
               is_system, is_visible, sort_order, permissions, create_time, update_time
        from im_application
    </sql>

    <select id="selectImApplicationList" parameterType="com.ruoyi.web.domain.ImApplication" resultMap="ImApplicationResult">
        <include refid="selectImApplicationVo"/>
        <where>
            <if test="name != null and name != ''">
                AND name like concat('%', #{name}, '%')
            </if>
            <if test="code != null and code != ''">
                AND code like concat('%', #{code}, '%')
            </if>
            <if test="category != null and category != ''">
                AND category = #{category}
            </if>
            <if test="appType != null and appType != ''">
                AND app_type = #{appType}
            </if>
            <if test="isVisible != null">
                AND is_visible = #{isVisible}
            </if>
        </where>
        order by sort_order, id
    </select>

    <select id="selectImApplicationById" parameterType="Long" resultMap="ImApplicationResult">
        <include refid="selectImApplicationVo"/>
        where id = #{id}
    </select>

    <insert id="insertImApplication" parameterType="com.ruoyi.web.domain.ImApplication" useGeneratedKeys="true" keyProperty="id">
        insert into im_application
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="code != null and code != ''">code,</if>
            <if test="icon != null">icon,</if>
            <if test="category != null">category,</if>
            <if test="description != null">description,</if>
            <if test="appType != null">app_type,</if>
            <if test="appUrl != null">app_url,</if>
            <if test="isSystem != null">is_system,</if>
            <if test="isVisible != null">is_visible,</if>
            <if test="sortOrder != null">sort_order,</if>
            <if test="permissions != null">permissions,</if>
            create_time
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="code != null and code != ''">#{code},</if>
            <if test="icon != null">#{icon},</if>
            <if test="category != null">#{category},</if>
            <if test="description != null">#{description},</if>
            <if test="appType != null">#{appType},</if>
            <if test="appUrl != null">#{appUrl},</if>
            <if test="isSystem != null">#{isSystem},</if>
            <if test="isVisible != null">#{isVisible},</if>
            <if test="sortOrder != null">#{sortOrder},</if>
            <if test="permissions != null">#{permissions},</if>
            sysdate()
        </trim>
    </insert>

    <update id="updateImApplication" parameterType="com.ruoyi.web.domain.ImApplication">
        update im_application
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="code != null and code != ''">code = #{code},</if>
            <if test="icon != null">icon = #{icon},</if>
            <if test="category != null">category = #{category},</if>
            <if test="description != null">description = #{description},</if>
            <if test="appType != null">app_type = #{appType},</if>
            <if test="appUrl != null">app_url = #{appUrl},</if>
            <if test="isSystem != null">is_system = #{isSystem},</if>
            <if test="isVisible != null">is_visible = #{isVisible},</if>
            <if test="sortOrder != null">sort_order = #{sortOrder},</if>
            <if test="permissions != null">permissions = #{permissions},</if>
            update_time = sysdate()
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteImApplicationByIds" parameterType="Long">
        delete from im_application where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="getApplications" resultMap="ImApplicationResult">
        select * from im_application
        <if test="category != null and category != ''"> where category = #{category} </if>
        order by sort_order, id
    </select>

    <select id="getApplicationsByCategory" resultType="java.util.Map">
        select * from im_application order by category, sort_order
    </select>

    <select id="getApplicationById" parameterType="Long" resultMap="ImApplicationResult">
        select * from im_application where id = #{id}
    </select>

    <insert id="insertApplication" parameterType="com.ruoyi.web.domain.ImApplication" useGeneratedKeys="true" keyProperty="id">
        insert into im_application (name, code, category, app_type, app_url, icon, is_visible)
        values (#{name}, #{code}, #{category}, #{appType}, #{appUrl}, #{icon}, 1)
    </insert>

    <update id="updateApplication">
        update im_application
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="description != null">description = #{description},</if>
            <if test="icon != null">icon = #{icon},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteApplication" parameterType="Long">
        delete from im_application where id = #{id}
    </delete>

    <update id="setVisibility">
        update im_application set is_visible = #{isVisible} where id = #{id}
    </update>

    <update id="batchSetVisibility">
        update im_application set is_visible = #{isVisible} where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

    <select id="getApplicationStatistics" resultType="java.util.Map">
        select
            count(*) as totalApps,
            sum(case when is_visible = 1 then 1 else 0 end) as visibleApps,
            sum(case when is_visible = 0 then 1 else 0 end) as hiddenApps,
            sum(case when is_system = 1 then 1 else 0 end) as systemApps,
            sum(case when category = 'OFFICE' then 1 else 0 end) as officeApps,
            sum(case when category = 'DATA' then 1 else 0 end) as dataApps,
            sum(case when category = 'TOOLS' then 1 else 0 end) as toolsApps,
            sum(case when category = 'CUSTOM' then 1 else 0 end) as customApps
        from im_application
    </select>
</mapper>
