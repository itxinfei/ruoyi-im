<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.ImGroupMapper">
    
    <resultMap type="ImGroup" id="ImGroupResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="ownerId"    column="owner_id"    />
        <result property="ownerName"    column="owner_name"    />
        <result property="description"    column="description"    />
        <result property="avatar"    column="avatar"    />
        <result property="status"    column="status"    />
        <result property="memberCount"    column="member_count"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectImGroupVo">
        select id, name, owner_id, owner_name, description, avatar, status, member_count, create_time, update_time from im_group
    </sql>

    <select id="selectImGroupList" parameterType="ImGroup" resultMap="ImGroupResult">
        <include refid="selectImGroupVo"/>
        <where>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="ownerId != null "> and owner_id = #{ownerId}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectImGroupById" parameterType="Long" resultMap="ImGroupResult">
        <include refid="selectImGroupVo"/>
        where id = #{id}
    </select>

    <insert id="insertImGroup" parameterType="ImGroup" useGeneratedKeys="true" keyProperty="id">
        insert into im_group
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="ownerId != null">owner_id,</if>
            <if test="ownerName != null">owner_name,</if>
            <if test="description != null">description,</if>
            <if test="avatar != null">avatar,</if>
            <if test="status != null">status,</if>
            <if test="memberCount != null">member_count,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="ownerId != null">#{ownerId},</if>
            <if test="ownerName != null">#{ownerName},</if>
            <if test="description != null">#{description},</if>
            <if test="avatar != null">#{avatar},</if>
            <if test="status != null">#{status},</if>
            <if test="memberCount != null">#{memberCount},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateImGroup" parameterType="ImGroup">
        update im_group
        <trim prefix="set" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="ownerId != null">owner_id = #{ownerId},</if>
            <if test="ownerName != null">owner_name = #{ownerName},</if>
            <if test="description != null">description = #{description},</if>
            <if test="avatar != null">avatar = #{avatar},</if>
            <if test="status != null">status = #{status},</if>
            <if test="memberCount != null">member_count = #{memberCount},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteImGroupById" parameterType="Long">
        delete from im_group where id = #{id}
    </delete>

    <delete id="deleteImGroupByIds" parameterType="String">
        delete from im_group where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>