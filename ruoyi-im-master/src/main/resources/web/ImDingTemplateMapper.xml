<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.web.mapper.ImDingTemplateMapper">

    <resultMap type="com.ruoyi.web.domain.ImDingTemplate" id="ImDingTemplateResult">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="content" column="content"/>
        <result property="category" column="category"/>
        <result property="isSystem" column="is_system"/>
        <result property="sortOrder" column="sort_order"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="selectImDingTemplateVo">
        select id, name, content, category, is_system, sort_order, status, create_time, update_time
        from im_ding_template
    </sql>

    <select id="selectImDingTemplateList" parameterType="com.ruoyi.web.domain.ImDingTemplate" resultMap="ImDingTemplateResult">
        <include refid="selectImDingTemplateVo"/>
        <where>
            1=1
            <if test="name != null and name != ''">
                and name like concat('%', #{name}, '%')
            </if>
            <if test="category != null and category != ''">
                and category = #{category}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
            <if test="isSystem != null">
                and is_system = #{isSystem}
            </if>
            <if test="params.beginTime != null and params.beginTime != ''">
                and date_format(create_time,'%Y-%m-%d') &gt;= date_format(#{params.beginTime},'%Y-%m-%d')
            </if>
            <if test="params.endTime != null and params.endTime != ''">
                and date_format(create_time,'%Y-%m-%d') &lt;= date_format(#{params.endTime},'%Y-%m-%d')
            </if>
        </where>
        order by is_system desc, sort_order asc, create_time desc
    </select>

    <select id="selectImDingTemplateById" parameterType="Long" resultMap="ImDingTemplateResult">
        <include refid="selectImDingTemplateVo"/>
        where id = #{id}
    </select>

    <insert id="insertImDingTemplate" parameterType="com.ruoyi.web.domain.ImDingTemplate" useGeneratedKeys="true" keyProperty="id">
        insert into im_ding_template
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="content != null and content != ''">content,</if>
            <if test="category != null and category != ''">category,</if>
            <if test="isSystem != null">is_system,</if>
            <if test="sortOrder != null">sort_order,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createTime != null">create_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="content != null and content != ''">#{content},</if>
            <if test="category != null and category != ''">#{category},</if>
            <if test="isSystem != null">#{isSystem},</if>
            <if test="sortOrder != null">#{sortOrder},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
        </trim>
    </insert>

    <update id="updateImDingTemplate" parameterType="com.ruoyi.web.domain.ImDingTemplate">
        update im_ding_template
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="content != null">content = #{content},</if>
            <if test="category != null and category != ''">category = #{category},</if>
            <if test="sortOrder != null">sort_order = #{sortOrder},</if>
            <if test="status != null and status != ''">status = #{status},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteImDingTemplateByIds" parameterType="Long">
        delete from im_ding_template where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="checkTemplateNameUnique" parameterType="String" resultMap="ImDingTemplateResult">
        <include refid="selectImDingTemplateVo"/>
        where name = #{name} limit 1
    </select>
</mapper>
