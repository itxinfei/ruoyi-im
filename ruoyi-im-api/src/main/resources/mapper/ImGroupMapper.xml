<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.im.mapper.ImGroupMapper">
    
    <resultMap type="com.ruoyi.im.domain.ImGroup" id="ImGroupResult">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="ownerId" column="owner_id"/>
        <result property="notice" column="notice"/>
        <result property="avatar" column="avatar"/>
        <result property="status" column="status"/>
        <result property="memberCount" column="member_count"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="ownerName" column="owner_name"/>
    </resultMap>

    <sql id="selectImGroupVo">
        select id, name, owner_id, notice, avatar, status, member_count, create_time, update_time 
        from im_group
    </sql>

    <select id="selectImGroupById" parameterType="Long" resultMap="ImGroupResult">
        <include refid="selectImGroupVo"/>
        where id = #{id}
    </select>
    
    <select id="selectImGroupList" parameterType="com.ruoyi.im.domain.ImGroup" resultMap="ImGroupResult">
        select g.id, g.name, g.owner_id, g.notice, g.avatar, g.status, g.member_count, g.create_time, g.update_time,
               u.nickname as owner_name
        from im_group g
        left join im_user u on g.owner_id = u.id
        <where>
            <if test="name != null and name != ''"> and g.name like concat('%', #{name}, '%') </if>
            <if test="ownerId != null"> and g.owner_id = #{ownerId} </if>
            <if test="status != null and status != ''"> and g.status = #{status} </if>
            <if test="ownerName != null and ownerName != ''"> and (u.nickname like concat('%', #{ownerName}, '%') or u.username like concat('%', #{ownerName}, '%')) </if>
        </where>
    </select>

    <insert id="insertImGroup" parameterType="com.ruoyi.im.domain.ImGroup" useGeneratedKeys="true" keyProperty="id">
        insert into im_group
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="ownerId != null">owner_id,</if>
            <if test="notice != null">notice,</if>
            <if test="avatar != null">avatar,</if>
            <if test="status != null">status,</if>
            <if test="memberCount != null">member_count,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="ownerId != null">#{ownerId},</if>
            <if test="notice != null">#{notice},</if>
            <if test="avatar != null">#{avatar},</if>
            <if test="status != null">#{status},</if>
            <if test="memberCount != null">#{memberCount},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateImGroup" parameterType="com.ruoyi.im.domain.ImGroup">
        update im_group
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="ownerId != null">owner_id = #{ownerId},</if>
            <if test="notice != null and notice != ''">notice = #{notice},</if>
            <if test="avatar != null and avatar != ''">avatar = #{avatar},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="memberCount != null">member_count = #{memberCount},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteImGroupById" parameterType="Long">
        delete from im_group where id = #{id}
    </delete>

    <delete id="deleteImGroupByIds" parameterType="Long[]">
        delete from im_group where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>