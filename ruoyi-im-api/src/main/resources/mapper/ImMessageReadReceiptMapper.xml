<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.im.mapper.ImMessageReadReceiptMapper">

    <resultMap type="com.ruoyi.im.domain.ImMessageReadReceipt" id="ImMessageReadReceiptResult">
        <id property="id" column="id"/>
        <result property="messageId" column="message_id"/>
        <result property="userId" column="user_id"/>
        <result property="conversationId" column="conversation_id"/>
        <result property="readTime" column="read_time"/>
        <result property="deviceType" column="device_type"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="selectImMessageReadReceiptVo">
        select id, message_id, user_id, conversation_id, read_time, device_type, create_time 
        from im_message_read_receipt
    </sql>

    <select id="selectImMessageReadReceiptList" parameterType="com.ruoyi.im.domain.ImMessageReadReceipt" resultMap="ImMessageReadReceiptResult">
        <include refid="selectImMessageReadReceiptVo"/>
        <where>  
            <if test="messageId != null"> AND message_id = #{messageId}</if>
            <if test="userId != null"> AND user_id = #{userId}</if>
            <if test="conversationId != null"> AND conversation_id = #{conversationId}</if>
            <if test="deviceType != null and deviceType != ''"> AND device_type = #{deviceType}</if>
        </where>
        order by create_time desc
    </select>

    <select id="selectImMessageReadReceiptById" parameterType="Long" resultMap="ImMessageReadReceiptResult">
        <include refid="selectImMessageReadReceiptVo"/>
        where id = #{id}
    </select>

    <insert id="insertImMessageReadReceipt" parameterType="com.ruoyi.im.domain.ImMessageReadReceipt" useGeneratedKeys="true" keyProperty="id">
        insert into im_message_read_receipt
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="messageId != null">message_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="conversationId != null">conversation_id,</if>
            <if test="readTime != null">read_time,</if>
            <if test="deviceType != null">device_type,</if>
            <if test="createTime != null">create_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="messageId != null">#{messageId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="conversationId != null">#{conversationId},</if>
            <if test="readTime != null">#{readTime},</if>
            <if test="deviceType != null">#{deviceType},</if>
            <if test="createTime != null">#{createTime},</if>
        </trim>
    </insert>

    <update id="updateImMessageReadReceipt" parameterType="com.ruoyi.im.domain.ImMessageReadReceipt">
        update im_message_read_receipt
        <trim prefix="SET" suffixOverrides=",">
            <if test="messageId != null">message_id = #{messageId},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="conversationId != null">conversation_id = #{conversationId},</if>
            <if test="readTime != null">read_time = #{readTime},</if>
            <if test="deviceType != null">device_type = #{deviceType},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteImMessageReadReceiptById" parameterType="Long">
        delete from im_message_read_receipt where id = #{id}
    </delete>

    <delete id="deleteImMessageReadReceiptByIds" parameterType="String">
        delete from im_message_read_receipt where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="selectImMessageReadReceiptByMessageId" parameterType="Long" resultMap="ImMessageReadReceiptResult">
        <include refid="selectImMessageReadReceiptVo"/>
        where message_id = #{messageId}
        order by create_time desc
    </select>

    <select id="selectImMessageReadReceiptByUserId" parameterType="Long" resultMap="ImMessageReadReceiptResult">
        <include refid="selectImMessageReadReceiptVo"/>
        where user_id = #{userId}
        order by create_time desc
    </select>

    <select id="selectImMessageReadReceiptByConversationId" parameterType="Long" resultMap="ImMessageReadReceiptResult">
        <include refid="selectImMessageReadReceiptVo"/>
        where conversation_id = #{conversationId}
        order by create_time desc
    </select>

    <delete id="deleteImMessageReadReceiptByMessageId" parameterType="Long">
        delete from im_message_read_receipt where message_id = #{messageId}
    </delete>
</mapper>