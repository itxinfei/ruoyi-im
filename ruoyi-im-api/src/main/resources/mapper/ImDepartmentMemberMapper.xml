<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.im.mapper.ImDepartmentMemberMapper">

    <resultMap id="BaseResultMap" type="com.ruoyi.im.domain.ImDepartmentMember">
        <id column="id" property="id" />
        <result column="department_id" property="departmentId" />
        <result column="user_id" property="userId" />
        <result column="is_primary" property="isPrimary" />
        <result column="position" property="position" />
        <result column="join_time" property="joinTime" />
        <result column="leave_time" property="leaveTime" />
        <result column="status" property="status" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <resultMap id="MemberVOResultMap" type="com.ruoyi.im.vo.organization.ImDepartmentMemberVO">
        <id column="id" property="id" />
        <result column="department_id" property="departmentId" />
        <result column="department_name" property="departmentName" />
        <result column="user_id" property="userId" />
        <result column="username" property="username" />
        <result column="nickname" property="nickname" />
        <result column="avatar" property="avatar" />
        <result column="email" property="email" />
        <result column="mobile" property="mobile" />
        <result column="is_primary" property="isPrimary" />
        <result column="position" property="position" />
        <result column="join_time" property="joinTime" />
        <result column="status" property="status" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <sql id="Base_Column_List">
        id, department_id, user_id, is_primary, position, join_time, leave_time, status, create_time, update_time
    </sql>

    <select id="selectMembersByDepartmentId" resultMap="MemberVOResultMap">
        SELECT dm.id, dm.department_id, d.name AS department_name,
               dm.user_id, u.username, u.nickname, u.avatar, u.email, u.mobile,
               dm.is_primary, dm.position, dm.join_time, dm.status, dm.create_time
        FROM im_department_member dm
        LEFT JOIN im_department d ON dm.department_id = d.id
        LEFT JOIN im_user u ON dm.user_id = u.id
        WHERE dm.department_id = #{departmentId} AND dm.status = 0
        ORDER BY dm.is_primary DESC, dm.create_time
    </select>

    <select id="selectDepartmentsByUserId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM im_department_member
        WHERE user_id = #{userId} AND status = 0
    </select>

    <select id="selectPrimaryDepartmentByUserId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM im_department_member
        WHERE user_id = #{userId} AND is_primary = 1 AND status = 0
        LIMIT 1
    </select>

    <select id="selectByDepartmentIdAndUserId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM im_department_member
        WHERE department_id = #{departmentId} AND user_id = #{userId}
    </select>

    <update id="updatePrimaryDepartment">
        UPDATE im_department_member
        SET is_primary = 0
        WHERE user_id = #{userId}
    </update>

    <delete id="deleteMembersByDepartmentId">
        DELETE FROM im_department_member
        WHERE department_id = #{departmentId}
    </delete>

    <delete id="deleteDepartmentsByUserId">
        DELETE FROM im_department_member
        WHERE user_id = #{userId}
    </delete>

    <select id="countMembersByDepartmentId" resultType="int">
        SELECT COUNT(1)
        FROM im_department_member
        WHERE department_id = #{departmentId} AND status = 0
    </select>

</mapper>
