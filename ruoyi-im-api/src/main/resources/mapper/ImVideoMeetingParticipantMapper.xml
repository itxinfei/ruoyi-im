<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.im.mapper.ImVideoMeetingParticipantMapper">

    <resultMap type="com.ruoyi.im.domain.ImVideoMeetingParticipant" id="ImVideoMeetingParticipantResult">
        <id property="id" column="id"/>
        <result property="meetingId" column="meeting_id"/>
        <result property="userId" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="userAvatar" column="user_avatar"/>
        <result property="role" column="role"/>
        <result property="status" column="status"/>
        <result property="joinTime" column="join_time"/>
        <result property="leaveTime" column="leave_time"/>
        <result property="isMuted" column="is_muted"/>
        <result property="isVideoOff" column="is_video_off"/>
        <result property="isSharing" column="is_sharing"/>
        <result property="deviceType" column="device_type"/>
        <result property="ipAddress" column="ip_address"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="selectImVideoMeetingParticipantVo">
        select id, meeting_id, user_id, user_name, user_avatar, role, status,
               join_time, leave_time, is_muted, is_video_off, is_sharing,
               device_type, ip_address, create_time
        from im_video_meeting_participant
    </sql>

    <select id="selectByMeetingId" resultMap="ImVideoMeetingParticipantResult">
        <include refid="selectImVideoMeetingParticipantVo"/>
        where meeting_id = #{meetingId}
        order by join_time asc
    </select>

    <select id="selectByMeetingAndUser" resultMap="ImVideoMeetingParticipantResult">
        <include refid="selectImVideoMeetingParticipantVo"/>
        where meeting_id = #{meetingId} and user_id = #{userId}
    </select>

    <select id="countJoinedByMeetingId" resultType="java.lang.Integer">
        select count(*) from im_video_meeting_participant
        where meeting_id = #{meetingId} and status = 'JOINED'
    </select>

    <select id="selectScreenSharer" resultMap="ImVideoMeetingParticipantResult">
        <include refid="selectImVideoMeetingParticipantVo"/>
        where meeting_id = #{meetingId} and is_sharing = 1
        limit 1
    </select>

    <update id="updateScreenShareStatus">
        update im_video_meeting_participant
        set is_sharing = #{status}
        where id = #{id}
    </update>

    <insert id="batchInsert">
        insert into im_video_meeting_participant
        (meeting_id, user_id, user_name, user_avatar, role, status, create_time)
        values
        <foreach collection="participants" item="item" separator=",">
            (#{item.meetingId}, #{item.userId}, #{item.userName}, #{item.userAvatar},
             #{item.role}, #{item.status}, NOW())
        </foreach>
    </insert>

</mapper>
