<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.im.mapper.ImUserMapper">
    
    <resultMap type="com.ruoyi.im.domain.ImUser" id="ImUserResult">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="nickname" column="nickname"/>
        <result property="email" column="email"/>
        <result property="mobile" column="mobile"/>
        <result property="avatar" column="avatar"/>
        <result property="status" column="status"/>
        <result property="gender" column="gender"/>
        <result property="signature" column="signature"/>
        <result property="lastLoginTime" column="last_login_time"/>
        <result property="lastLoginIp" column="last_login_ip"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="selectImUserVo">
        select id, username, password, nickname, email, 
               mobile, avatar, status, gender, signature,
               last_login_time, last_login_ip,
               create_time, update_time 
        from im_user
    </sql>

    <select id="selectImUserById" parameterType="Long" resultMap="ImUserResult">
        <include refid="selectImUserVo"/>
        where id = #{id}
    </select>
    
    <select id="selectImUserList" parameterType="com.ruoyi.im.domain.ImUser" resultMap="ImUserResult">
        <include refid="selectImUserVo"/>
        <where>
            <if test="username != null and username != ''"> and username like concat('%', #{username}, '%') </if>
            <if test="nickname != null and nickname != ''"> and nickname like concat('%', #{nickname}, '%') </if>
            <if test="email != null and email != ''"> and email = #{email} </if>
            <if test="mobile != null and mobile != ''"> and mobile = #{mobile} </if>
            <if test="status != null and status != ''"> and status = #{status} </if>
        </where>
    </select>

    <insert id="insertImUser" parameterType="com.ruoyi.im.domain.ImUser" useGeneratedKeys="true" keyProperty="id">
        insert into im_user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="username != null">username,</if>
            <if test="password != null">password,</if>
            <if test="nickname != null">nickname,</if>
            <if test="email != null">email,</if>
            <if test="mobile != null">mobile,</if>
            <if test="avatar != null">avatar,</if>
            <if test="status != null">status,</if>
            <if test="gender != null">gender,</if>
            <if test="signature != null">signature,</if>
            <if test="lastLoginTime != null">last_login_time,</if>
            <if test="lastLoginIp != null">last_login_ip,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="username != null">#{username},</if>
            <if test="password != null">#{password},</if>
            <if test="nickname != null">#{nickname},</if>
            <if test="email != null">#{email},</if>
            <if test="mobile != null">#{mobile},</if>
            <if test="avatar != null">#{avatar},</if>
            <if test="status != null">#{status},</if>
            <if test="gender != null">#{gender},</if>
            <if test="signature != null">#{signature},</if>
            <if test="lastLoginTime != null">#{lastLoginTime},</if>
            <if test="lastLoginIp != null">#{lastLoginIp},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateImUser" parameterType="com.ruoyi.im.domain.ImUser">
        update im_user
        <trim prefix="SET" suffixOverrides=",">
            <if test="username != null and username != ''">username = #{username},</if>
            <if test="password != null and password != ''">password = #{password},</if>
            <if test="nickname != null and nickname != ''">nickname = #{nickname},</if>
            <if test="email != null and email != ''">email = #{email},</if>
            <if test="mobile != null and mobile != ''">mobile = #{mobile},</if>
            <if test="avatar != null and avatar != ''">avatar = #{avatar},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="gender != null">gender = #{gender},</if>
            <if test="signature != null">signature = #{signature},</if>
            <if test="lastLoginTime != null">last_login_time = #{lastLoginTime},</if>
            <if test="lastLoginIp != null">last_login_ip = #{lastLoginIp},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteImUserById" parameterType="Long">
        delete from im_user where id = #{id}
    </delete>

    <delete id="deleteImUserByIds" parameterType="Long[]">
        delete from im_user where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
    <select id="selectImUserByUsername" parameterType="String" resultMap="ImUserResult">
        select id, username, password, nickname, email, 
               mobile, avatar, status, gender, signature,
               last_login_time, last_login_ip,
               create_time, update_time
        from im_user
        where username = #{username}
    </select>
    
    <select id="selectImUserByEmail" parameterType="String" resultMap="ImUserResult">
        select id, username, password, nickname, email, 
               mobile, avatar, status, gender, signature,
               last_login_time, last_login_ip,
               create_time, update_time
        from im_user
        where email = #{email}
    </select>
    
    <!-- 批量插入用户 - 性能优化 -->
    <insert id="batchInsertImUser" parameterType="java.util.List">
        insert into im_user (username, password, nickname, email, mobile, avatar, status, gender, signature, last_login_time, last_login_ip, create_time, update_time)
        values
        <foreach collection="list" item="user" separator=",">
            (#{user.username}, #{user.password}, #{user.nickname}, #{user.email}, #{user.mobile}, 
             #{user.avatar}, #{user.status}, #{user.gender}, #{user.signature}, #{user.lastLoginTime}, #{user.lastLoginIp},
             #{user.createTime}, #{user.updateTime})
        </foreach>
    </insert>
    
    <!-- 批量更新用户状态 - 性能优化 -->
    <update id="batchUpdateUserStatus">
        update im_user
        set status = #{status}
        where id in
        <foreach collection="userIds" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>
    
    <!-- 分页查询用户列表 - 性能优化 -->
    <select id="selectImUserListWithPagination" resultMap="ImUserResult">
        <include refid="selectImUserVo"/>
        <where>
            <if test="imUser.username != null and imUser.username != ''"> and username like concat('%', #{imUser.username}, '%') </if>
            <if test="imUser.nickname != null and imUser.nickname != ''"> and nickname like concat('%', #{imUser.nickname}, '%') </if>
            <if test="imUser.email != null and imUser.email != ''"> and email = #{imUser.email} </if>
            <if test="imUser.mobile != null and imUser.mobile != ''"> and mobile = #{imUser.mobile} </if>
            <if test="imUser.status != null and imUser.status != ''"> and status = #{imUser.status} </if>
        </where>
        order by id desc
        limit #{limit} offset #{offset}
    </select>
    
    <!-- 检查用户名是否存在 - 性能优化 -->
    <select id="existsByUsername" parameterType="String" resultType="java.lang.Boolean">
        select case when count(*) > 0 then true else false end
        from im_user
        where username = #{username}
    </select>
    
    <!-- 检查邮箱是否存在 - 性能优化 -->
    <select id="existsByEmail" parameterType="String" resultType="java.lang.Boolean">
        select case when count(*) > 0 then true else false end
        from im_user
        where email = #{email}
    </select>
    
    <!-- 获取用户权限列表 -->
    <select id="selectUserPermissionsByUserId" parameterType="Long" resultType="java.lang.String">
        <!-- 由于权限表未定义，返回默认权限 -->
        SELECT 'im:user:view' AS permission_key
        UNION ALL
        SELECT 'im:message:send'
        UNION ALL
        SELECT 'im:message:view'
        UNION ALL
        SELECT 'im:group:view'
        UNION ALL
        SELECT 'im:contact:view'
    </select>
    
    <!-- 获取用户角色列表 -->
    <select id="selectUserRolesByUserId" parameterType="Long" resultType="java.lang.String">
        <!-- 由于角色表未定义，返回默认角色 -->
        SELECT 'user' AS role_key
        UNION ALL
        SELECT 'member'
    </select>

    <!-- 根据关键词搜索用户 -->
    <select id="selectImUserByKeyword" parameterType="String" resultMap="ImUserResult">
        select id, username, password, nickname, email, mobile, avatar, status,
               gender, signature, last_login_time, last_login_ip, create_time, update_time
        from im_user
        <where>
            <if test="keyword != null and keyword != ''">
                and (username like concat('%', #{keyword}, '%') or nickname like concat('%', #{keyword}, '%'))
            </if>
        </where>
        limit 50
    </select>

    <!-- Count total users -->
    <select id="countImUsers" resultType="java.lang.Integer">
        select count(*) from im_user
    </select>
</mapper>ct id="countImUsers" resultType="java.lang.Integer">
        select count(*) from im_user
    </select>
</mapper>