<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.im.mapper.ImFriendRequestMapper">
    
    <resultMap type="com.ruoyi.im.domain.ImFriendRequest" id="ImFriendRequestResult">
        <id property="id" column="id"/>
        <result property="fromUserId" column="from_user_id"/>
        <result property="toUserId" column="to_user_id"/>
        <result property="message" column="message"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="handledTime" column="handled_time"/>
    </resultMap>

    <sql id="selectImFriendRequestVo">
        select id, from_user_id, to_user_id, message, status, create_time, handled_time
        from im_friend_request
    </sql>

    <select id="selectImFriendRequestById" parameterType="Long" resultMap="ImFriendRequestResult">
        <include refid="selectImFriendRequestVo"/>
        where id = #{id}
    </select>
    
    <select id="selectImFriendRequestList" parameterType="com.ruoyi.im.domain.ImFriendRequest" resultMap="ImFriendRequestResult">
        <include refid="selectImFriendRequestVo"/>
        <where>
            <if test="fromUserId != null"> and from_user_id = #{fromUserId} </if>
            <if test="toUserId != null"> and to_user_id = #{toUserId} </if>
            <if test="status != null and status != ''"> and status = #{status} </if>
        </where>
    </select>

    <insert id="insertImFriendRequest" parameterType="com.ruoyi.im.domain.ImFriendRequest" useGeneratedKeys="true" keyProperty="id">
        insert into im_friend_request
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="fromUserId != null">from_user_id,</if>
            <if test="toUserId != null">to_user_id,</if>
            <if test="message != null">message,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="handledTime != null">handled_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="fromUserId != null">#{fromUserId},</if>
            <if test="toUserId != null">#{toUserId},</if>
            <if test="message != null">#{message},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="handledTime != null">#{handledTime},</if>
        </trim>
    </insert>

    <update id="updateImFriendRequest" parameterType="com.ruoyi.im.domain.ImFriendRequest">
        update im_friend_request
        <trim prefix="SET" suffixOverrides=",">
            <if test="fromUserId != null">from_user_id = #{fromUserId},</if>
            <if test="toUserId != null">to_user_id = #{toUserId},</if>
            <if test="message != null and message != ''">message = #{message},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="handledTime != null">handled_time = #{handledTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteImFriendRequestById" parameterType="Long">
        delete from im_friend_request where id = #{id}
    </delete>

    <delete id="deleteImFriendRequestByIds" parameterType="Long[]">
        delete from im_friend_request where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
    <select id="selectImFriendRequestListByToUserId" parameterType="Long" resultMap="ImFriendRequestResult">
        select id, from_user_id, to_user_id, message, status, create_time, handled_time
        from im_friend_request
        where to_user_id = #{toUserId}
        order by create_time desc
    </select>
</mapper>