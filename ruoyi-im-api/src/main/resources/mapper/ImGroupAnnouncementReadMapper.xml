<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.im.mapper.ImGroupAnnouncementReadMapper">

    <!-- 结果映射 -->
    <resultMap type="com.ruoyi.im.domain.ImGroupAnnouncementRead" id="ImGroupAnnouncementReadResult">
        <id property="id" column="id"/>
        <result property="groupId" column="group_id"/>
        <result property="announcementId" column="announcement_id"/>
        <result property="userId" column="user_id"/>
        <result property="readTime" column="read_time"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <!-- 删除公告的所有已读记录 -->
    <delete id="deleteByAnnouncementId" parameterType="Long">
        DELETE FROM im_group_announcement_read
        WHERE announcement_id = #{announcementId}
    </delete>

    <!-- 批量查询用户对多个公告的已读状态 -->
    <select id="selectByUserAndAnnouncementIds" resultMap="ImGroupAnnouncementReadResult">
        SELECT * FROM im_group_announcement_read
        WHERE user_id = #{userId}
        AND announcement_id IN
        <foreach collection="announcementIds" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

</mapper>
