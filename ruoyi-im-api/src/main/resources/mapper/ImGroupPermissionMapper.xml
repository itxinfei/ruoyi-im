<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.im.mapper.ImGroupPermissionMapper">

    <!-- 结果映射 -->
    <resultMap type="com.ruoyi.im.domain.ImGroupPermission" id="ImGroupPermissionResult">
        <id property="id" column="id"/>
        <result property="groupId" column="group_id"/>
        <result property="role" column="role"/>
        <result property="canInvite" column="can_invite"/>
        <result property="canRemove" column="can_remove"/>
        <result property="canMute" column="can_mute"/>
        <result property="canAnnounce" column="can_announce"/>
        <result property="canUpload" column="can_upload"/>
        <result property="canEditGroup" column="can_edit_group"/>
        <result property="canKick" column="can_kick"/>
        <result property="canSetAdmin" column="can_set_admin"/>
        <result property="canDisband" column="can_disband"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <!-- 删除群组的所有权限配置 -->
    <delete id="deleteByGroupId" parameterType="Long">
        DELETE FROM im_group_permission
        WHERE group_id = #{groupId}
    </delete>

</mapper>
