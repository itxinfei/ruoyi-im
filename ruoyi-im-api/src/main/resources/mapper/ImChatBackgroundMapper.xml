<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.im.mapper.ImChatBackgroundMapper">

    <resultMap type="com.ruoyi.im.domain.ImChatBackground" id="ImChatBackgroundResult">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="conversationId" column="conversation_id"/>
        <result property="backgroundType" column="background_type"/>
        <result property="backgroundValue" column="background_value"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="selectImChatBackgroundVo">
        select id, user_id, conversation_id, background_type, background_value, create_time, update_time
        from im_chat_background
    </sql>

    <!-- 根据用户ID和会话ID查询背景设置 -->
    <select id="selectByUserIdAndConversationId" resultMap="ImChatBackgroundResult">
        <include refid="selectImChatBackgroundVo"/>
        where user_id = #{userId}
        <if test="conversationId != null">
            and conversation_id = #{conversationId}
        </if>
        <if test="conversationId == null">
            and conversation_id is null
        </if>
        limit 1
    </select>

</mapper>
