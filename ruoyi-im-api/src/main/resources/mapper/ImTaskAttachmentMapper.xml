<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.im.mapper.ImTaskAttachmentMapper">

    <resultMap id="BaseResultMap" type="com.ruoyi.im.domain.ImTaskAttachment">
        <id column="id" property="id"/>
        <result column="task_id" property="taskId"/>
        <result column="file_name" property="fileName"/>
        <result column="file_url" property="fileUrl"/>
        <result column="file_size" property="fileSize"/>
        <result column="file_type" property="fileType"/>
        <result column="upload_user_id" property="uploadUserId"/>
        <result column="upload_time" property="uploadTime"/>
        <result column="uploader_name" property="uploaderName"/>
        <result column="uploader_avatar" property="uploaderAvatar"/>
    </resultMap>

    <select id="selectByTaskId" resultMap="BaseResultMap">
        SELECT a.*,
               u.nickname as uploader_name,
               u.avatar as uploader_avatar
        FROM im_task_attachment a
        LEFT JOIN im_user u ON a.upload_user_id = u.id
        WHERE a.task_id = #{taskId}
        ORDER BY a.upload_time DESC
    </select>

    <select id="countByTaskId" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM im_task_attachment
        WHERE task_id = #{taskId}
    </select>

</mapper>
