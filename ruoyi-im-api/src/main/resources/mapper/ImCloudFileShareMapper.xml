<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.im.mapper.ImCloudFileShareMapper">

    <resultMap type="com.ruoyi.im.domain.ImCloudFileShare" id="ImCloudFileShareResult">
        <id property="id" column="id"/>
        <result property="shareType" column="share_type"/>
        <result property="resourceId" column="resource_id"/>
        <result property="sharerId" column="sharer_id"/>
        <result property="shareCode" column="share_code"/>
        <result property="shareLink" column="share_link"/>
        <result property="accessPassword" column="access_password"/>
        <result property="expireDays" column="expire_days"/>
        <result property="expireTime" column="expire_time"/>
        <result property="allowDownload" column="allow_download"/>
        <result property="allowPreview" column="allow_preview"/>
        <result property="viewCount" column="view_count"/>
        <result property="downloadCount" column="download_count"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="selectImCloudFileShareVo">
        select id, share_type, resource_id, sharer_id, share_code, share_link,
               access_password, expire_days, expire_time, allow_download, allow_preview,
               view_count, download_count, status, create_time, update_time
        from im_cloud_file_share
    </sql>

    <select id="selectBySharerId" resultMap="ImCloudFileShareResult">
        <include refid="selectImCloudFileShareVo"/>
        where sharer_id = #{userId}
        order by create_time desc
    </select>

    <select id="selectByShareCode" resultMap="ImCloudFileShareResult">
        <include refid="selectImCloudFileShareVo"/>
        where share_code = #{shareCode}
    </select>

    <update id="incrementViewCount">
        update im_cloud_file_share
        set view_count = view_count + 1
        where id = #{id}
    </update>

    <update id="incrementDownloadCount">
        update im_cloud_file_share
        set download_count = download_count + 1
        where id = #{id}
    </update>

</mapper>
