<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.im.mapper.ImUserMapper">
    
    <resultMap type="ImUser" id="ImUserResult">
        <result property="id"    column="id"    />
        <result property="username"    column="username"    />
        <result property="nickname"    column="nickname"    />
        <result property="email"    column="email"    />
        <result property="phone"    column="phone"    />
        <result property="avatar"    column="avatar"    />
        <result property="signature"    column="signature"    />
        <result property="status"    column="status"    />
        <result property="onlineStatus"    column="online_status"    />
        <result property="lastActiveTime"    column="last_active_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectImUserVo">
        select id, username, nickname, email, phone, avatar, signature, status, online_status, last_active_time, create_by, create_time, update_by, update_time, remark from im_user
    </sql>

    <select id="selectImUserList" parameterType="ImUser" resultMap="ImUserResult">
        <include refid="selectImUserVo"/>
        <where>  
            <if test="username != null  and username != ''"> and username like concat('%', #{username}, '%')</if>
            <if test="nickname != null  and nickname != ''"> and nickname like concat('%', #{nickname}, '%')</if>
            <if test="email != null  and email != ''"> and email = #{email}</if>
            <if test="phone != null  and phone != ''"> and phone = #{phone}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="onlineStatus != null  and onlineStatus != ''"> and online_status = #{onlineStatus}</if>
        </where>
    </select>
    
    <select id="selectImUserById" parameterType="Long" resultMap="ImUserResult">
        <include refid="selectImUserVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertImUser" parameterType="ImUser" useGeneratedKeys="true" keyProperty="id">
        insert into im_user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="username != null and username != ''">username,</if>
            <if test="nickname != null and nickname != ''">nickname,</if>
            <if test="email != null and email != ''">email,</if>
            <if test="phone != null and phone != ''">phone,</if>
            <if test="avatar != null and avatar != ''">avatar,</if>
            <if test="signature != null">signature,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="onlineStatus != null and onlineStatus != ''">online_status,</if>
            <if test="lastActiveTime != null">last_active_time,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null and updateBy != ''">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="username != null and username != ''">#{username},</if>
            <if test="nickname != null and nickname != ''">#{nickname},</if>
            <if test="email != null and email != ''">#{email},</if>
            <if test="phone != null and phone != ''">#{phone},</if>
            <if test="avatar != null and avatar != ''">#{avatar},</if>
            <if test="signature != null">#{signature},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="onlineStatus != null and onlineStatus != ''">#{onlineStatus},</if>
            <if test="lastActiveTime != null">#{lastActiveTime},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null and updateBy != ''">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateImUser" parameterType="ImUser">
        update im_user
        <trim prefix="SET" suffixOverrides=",">
            <if test="username != null and username != ''">username = #{username},</if>
            <if test="nickname != null and nickname != ''">nickname = #{nickname},</if>
            <if test="email != null and email != ''">email = #{email},</if>
            <if test="phone != null and phone != ''">phone = #{phone},</if>
            <if test="avatar != null and avatar != ''">avatar = #{avatar},</if>
            <if test="signature != null">signature = #{signature},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="onlineStatus != null and onlineStatus != ''">online_status = #{onlineStatus},</if>
            <if test="lastActiveTime != null">last_active_time = #{lastActiveTime},</if>
            <if test="createBy != null and createBy != ''">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteImUserById" parameterType="Long">
        delete from im_user where id = #{id}
    </delete>

    <delete id="deleteImUserByIds" parameterType="String">
        delete from im_user where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- 根据用户名查询IM用户 -->
    <select id="selectImUserByUsername" parameterType="String" resultMap="ImUserResult">
        <include refid="selectImUserVo"/>
        where username = #{username}
    </select>

    <!-- 根据邮箱查询IM用户 -->
    <select id="selectImUserByEmail" parameterType="String" resultMap="ImUserResult">
        <include refid="selectImUserVo"/>
        where email = #{email}
    </select>

    <!-- 根据手机号查询IM用户 -->
    <select id="selectImUserByPhone" parameterType="String" resultMap="ImUserResult">
        <include refid="selectImUserVo"/>
        where phone = #{phone}
    </select>

    <!-- 搜索用户 -->
    <select id="searchUsers" parameterType="String" resultMap="ImUserResult">
        <include refid="selectImUserVo"/>
        where (username like concat('%', #{keyword}, '%') 
               or nickname like concat('%', #{keyword}, '%')
               or email like concat('%', #{keyword}, '%')
               or phone like concat('%', #{keyword}, '%'))
        and status = '0'
    </select>

    <!-- 根据用户ID列表查询用户 -->
    <select id="selectImUsersByIds" parameterType="java.util.List" resultMap="ImUserResult">
        <include refid="selectImUserVo"/>
        where id in
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <!-- 更新用户在线状态 -->
    <update id="updateOnlineStatus">
        update im_user set online_status = #{status}, last_active_time = now() where id = #{userId}
    </update>

    <!-- 获取用户在线状态 -->
    <select id="getUserOnlineStatus" parameterType="Long" resultType="String">
        select online_status from im_user where id = #{userId}
    </select>

    <!-- 获取在线用户列表 -->
    <select id="getOnlineUsers" resultMap="ImUserResult">
        <include refid="selectImUserVo"/>
        where online_status = '1' and status = '0'
    </select>

    <!-- 获取在线用户数量 -->
    <select id="getOnlineUserCount" resultType="int">
        select count(*) from im_user where online_status = '1' and status = '0'
    </select>

    <!-- 更新用户头像 -->
    <update id="updateUserAvatar">
        update im_user set avatar = #{avatar}, update_time = now() where id = #{userId}
    </update>

    <!-- 更新用户昵称 -->
    <update id="updateUserNickname">
        update im_user set nickname = #{nickname}, update_time = now() where id = #{userId}
    </update>

    <!-- 更新用户签名 -->
    <update id="updateUserSignature">
        update im_user set signature = #{signature}, update_time = now() where id = #{userId}
    </update>

    <!-- 检查用户名是否存在 -->
    <select id="checkUsernameExists" parameterType="String" resultType="boolean">
        select count(*) > 0 from im_user where username = #{username}
    </select>

    <!-- 检查邮箱是否存在 -->
    <select id="checkEmailExists" parameterType="String" resultType="boolean">
        select count(*) > 0 from im_user where email = #{email}
    </select>

    <!-- 检查手机号是否存在 -->
    <select id="checkPhoneExists" parameterType="String" resultType="boolean">
        select count(*) > 0 from im_user where phone = #{phone}
    </select>

    <!-- 获取推荐用户 -->
    <select id="getRecommendUsers" resultMap="ImUserResult">
        <include refid="selectImUserVo"/>
        where id != #{userId} and status = '0'
        order by create_time desc
        <if test="limit != null">
            limit #{limit}
        </if>
    </select>

    <!-- 更新最后活跃时间 -->
    <update id="updateLastActiveTime">
        update im_user set last_active_time = now() where id = #{userId}
    </update>

</mapper>