<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.im.mapper.ImMessageMapper">

    <resultMap type="com.ruoyi.im.domain.ImMessage" id="ImMessageResult">
        <result property="id"    column="id"    />
        <result property="conversationId"    column="conversation_id"    />
        <result property="senderId"    column="sender_id"    />
        <result property="type"    column="type"    />
        <result property="content"    column="content"    />
        <result property="replyMessageId"    column="reply_message_id"    />
        <result property="status"    column="status"    />
        <result property="sensitiveLevel"    column="sensitive_level"    />
        <result property="isRevoked"    column="is_revoked"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <select id="selectConversationMessages" parameterType="Long" resultMap="ImMessageResult">
        SELECT * FROM im_message 
        WHERE conversation_id = #{conversationId}
        <if test="userId != null">
            AND sender_id = #{userId}
        </if>
        <if test="lastMessageId != null and lastMessageId != 0">
            AND id &lt; #{lastMessageId}
        </if>
        ORDER BY create_time DESC
        <if test="limit != null">
            LIMIT #{limit}
        </if>
    </select>

    <select id="selectMessageDetail" parameterType="Long" resultMap="ImMessageResult">
        SELECT * FROM im_message 
        WHERE id = #{messageId}
        <if test="userId != null">
            AND (sender_id = #{userId} OR conversation_id IN (
                SELECT conversation_id FROM im_conversation_member WHERE user_id = #{userId}
            ))
        </if>
    </select>

    <select id="searchMessages" parameterType="map" resultMap="ImMessageResult">
        SELECT * FROM im_message 
        WHERE 1=1
        <if test="conversationId != null">
            AND conversation_id = #{conversationId}
        </if>
        <if test="userId != null">
            AND sender_id = #{userId}
        </if>
        <if test="keyword != null and keyword != ''">
            AND content LIKE CONCAT('%', #{keyword}, '%')
        </if>
        <if test="messageType != null and messageType != ''">
            AND type = #{messageType}
        </if>
        <if test="startTime != null">
            AND create_time &gt;= #{startTime}
        </if>
        <if test="endTime != null">
            AND create_time &lt;= #{endTime}
        </if>
        ORDER BY create_time DESC
    </select>

    <select id="selectUserSentMessages" parameterType="map" resultMap="ImMessageResult">
        SELECT * FROM im_message 
        WHERE sender_id = #{senderId}
        <if test="messageType != null and messageType != ''">
            AND type = #{messageType}
        </if>
        <if test="startTime != null">
            AND create_time &gt;= #{startTime}
        </if>
        <if test="endTime != null">
            AND create_time &lt;= #{endTime}
        </if>
        ORDER BY create_time DESC
    </select>

    <update id="updateMessageStatusBatch" parameterType="map">
        UPDATE im_message 
        SET status = #{status}
        WHERE id IN
        <foreach collection="messageIds" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

</mapper>